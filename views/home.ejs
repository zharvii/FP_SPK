<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Home</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item">
                            <%= data.nav[0].page %>
                        </li>

                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->

    <!-- Main content -->
    <div class="content">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-6">
                    <!-- small box -->
                    <div class="small-box bg-info">
                        <div class="inner">
                            <h3>
                                $ <%= data.hargawti.harga %> / Barrel
                            </h3>

                            <p>Harga Minyak Mentah WTI</p>
                        </div>
                        <div class="icon">
                            <i class="fas fa-money-bill"></i>
                        </div>
                        <a href="/wti" class="small-box-footer">Peramalan <i class="fas fa-arrow-circle-right"></i></a>
                    </div>
                </div>
                <!-- ./col -->
                <div class="col-lg-6 col-6">
                    <!-- small box -->
                    <div class="small-box bg-success">
                        <div class="inner">
                            <h3>
                                $ <%= data.hargabrent.harga %> / Barrel
                            </h3>

                            <p>Harga Minyak Mentah BRENT</p>
                        </div>
                        <div class="icon">
                            <i class="fas fa-money-bill"></i>
                        </div>
                        <a href="/brent" class="small-box-footer">Peramalan <i class="fas fa-arrow-circle-right"></i></a>
                    </div>
                </div>

            </div>

            <div class="row">
                <!-- Left col -->
                <section class="col-lg-12 connectedSortable">
                    <!-- Custom tabs (Charts with tabs)-->
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">
                                <i class="fas fa-chart-pie mr-1"></i>
                                WTI
                            </h3>
                            <div class="card-tools">
                                <ul class="nav nav-pills ml-auto">
                                    <li class="nav-item">
                                        <a class="nav-link active" href="#revenue-chart" data-toggle="tab">1 Hari</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="#sales-chart" data-toggle="tab">1 Bulan</a>
                                    </li>
                                </ul>
                            </div>
                        </div><!-- /.card-header -->
                        <div class="card-body">
                            <div class="tab-content p-0">
                                <!-- Morris chart - Sales -->
                                <div class="chart tab-pane active" id="revenue-chart"
                                    style="position: relative; height: 400px;">
                                    <figure class="highcharts-figure">
                                        <div id="chartku1">

                                            <div id="chartWtiJam"></div>
                                        </div>

                                        <p class="highcharts-description"></p>
                                    </figure>
                                </div>
                                <div class="chart tab-pane" id="sales-chart" style="position: relative; height: 400px;">
                                    <figure class="highcharts-figure">
                                        <div id="chartku2">

                                            <div id="chartWtiHari"></div>
                                        </div>

                                        <p class="highcharts-description"></p>
                                    </figure>
                                </div>
                            </div>
                        </div><!-- /.card-body -->
                    </div>
                    <!-- /.card -->


                </section>
                <!-- /.Left col -->

                <!-- right col -->
            </div>
            <div class="row">

                <!-- right col (We are only adding the ID to make the widgets sortable)-->
                <section class="col-lg-12 connectedSortable">
                    <!-- Custom tabs (Charts with tabs)-->
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">
                                <i class="fas fa-chart-pie mr-1"></i>
                                BRENT
                            </h3>
                            <div class="card-tools">
                                <ul class="nav nav-pills ml-auto">
                                    <li class="nav-item">
                                        <a class="nav-link active" href="#revenue-chart2" data-toggle="tab">1 Hari</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="#sales-chart2" data-toggle="tab">1 Bulan</a>
                                    </li>
                                </ul>
                            </div>
                        </div><!-- /.card-header -->
                        <div class="card-body">
                            <div class="tab-content p-0">
                                <!-- Morris chart - Sales -->
                                <div class="chart tab-pane active" id="revenue-chart2"
                                    style="position: relative; height: 400px;">
                                    <figure class="highcharts-figure">
                                        <div id="chartku3">

                                            <div id="chartBrentJam"></div>
                                        </div>

                                        <p class="highcharts-description"></p>
                                    </figure>
                                </div>
                                <div class="chart tab-pane" id="sales-chart2"
                                    style="position: relative; height: 400px;">
                                    <figure class="highcharts-figure">
                                        <div id="chartku4">

                                            <div id="chartBrentHari"></div>
                                        </div>

                                        <p class="highcharts-description"></p>
                                    </figure>
                                </div>
                            </div>
                        </div><!-- /.card-body -->
                    </div>
                    <!-- /.card -->


                </section>
                <!-- right col -->
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->